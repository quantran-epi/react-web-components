{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@theme/specs/abstract/*": ["./src/theme/specs/abstract/*"],
      "@theme/specs/default": ["./src/theme/specs/default/index"],
      "@theme/provider": ["./src/theme/provider/index"],
      "@theme/responsive/*": ["./src/theme/responsive/*"],
      "@theme/style-props/*": ["./src/theme/style-props/*"],
      "@theme/types": ["./src/theme/types/index"],
      "@theme/functions": ["./src/theme/functions/index"]
    }
  },
  "include": ["src", "**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    // "src/components/**/**/*.stories.tsx",
    // "src/components/**/**/*.test.tsx",
    // "src/components/**/*.stories.tsx",
    // "src/components/**/*.test.tsx"
  ]
}